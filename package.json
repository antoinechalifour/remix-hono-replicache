    "@remix-run/serve": "2.12.1",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.34.1",
    "hono": "4.6.3",
    "isbot": "4.1.0",
    "pg": "^8.13.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "remix-hono": "0.0.16",
    "replicache": "^15.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@hono/vite-build": "1.1.0",
    "@hono/vite-dev-server": "0.16.0",
    "@remix-run/dev": "2.12.1",
    "@types/pg": "^8.11.10",
    "@types/react": "18.2.20",
    "@types/react-dom": "18.2.7",
    "@typescript-eslint/eslint-plugin": "6.7.4",
    "@typescript-eslint/parser": "6.7.4",
